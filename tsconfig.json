{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "lib": ["es6"],
        "target": "esnext",
        "skipLibCheck": true,
        "jsx": "react-native",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true // just for messages.json
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}